@model IEnumerable<CarRentalApp.Core.Entities.Booking>

@{
    ViewData["Title"] = "My Bookings";
}

<div class="container my-5">
    <h2 class="mb-4 fw-bold">My Reservations</h2>
    
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle me-2"></i>
            <strong>Success!</strong> @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    
    @if (!Model.Any())
    {
        <div class="alert alert-light text-center py-5 shadow-sm">
            <h4>No bookings found.</h4>
            <p>You haven't booked any cars yet.</p>
            <a asp-controller="Vehicles" asp-action="Index" class="btn btn-primary mt-3">Browse Cars</a>
        </div>
    }
    }
    else
    {
        <div class="d-flex justify-content-end mb-3">
            <a asp-action="ExportExcel" class="btn btn-success me-2">
                <i class="bi bi-file-earmark-excel"></i> Export to Excel
            </a>
            <a asp-action="ExportCsv" class="btn btn-outline-secondary">
                <i class="bi bi-filetype-csv"></i> Export to CSV
            </a>
        </div>
        
        <div class="table-responsive shadow-sm rounded">
            <table class="table table-hover align-middle mb-0 bg-white">
                <thead class="bg-light">
                    <tr>
                        <th class="py-3 ps-4">Vehicle</th>
                        <th>Dates</th>
                        <th>Total Price</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model) {
                        <tr>
                            <td class="ps-4">
                                <div class="fw-bold">@item.Vehicle.Brand @item.Vehicle.Model</div>
                                <small class="text-muted">@item.CreatedAt.ToShortDateString()</small>
                            </td>
                            <td>
                                <div>@item.StartDate.ToShortDateString()</div>
                                <div class="text-muted small">to @item.EndDate.ToShortDateString()</div>
                            </td>
                            <td class="fw-bold text-success">
                                $@item.TotalPrice
                            </td>
                            <td>
                                <span class="badge bg-secondary rounded-pill">@item.Status</span>
                            </td>
                            <td>
                                <div class="btn-group" role="group">
                                    <a asp-action="DownloadPdf" asp-route-id="@item.Id" class="btn btn-sm btn-primary" title="Download Contract PDF">
                                        <i class="bi bi-file-pdf"></i> PDF
                                    </a>
                                    <a asp-action="ViewQrCode" asp-route-id="@item.Id" class="btn btn-sm btn-info" target="_blank" title="View QR Code">
                                        <i class="bi bi-qr-code"></i> QR
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>
