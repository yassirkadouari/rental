@model IEnumerable<CarRentalApp.Core.Entities.Vehicle>

@{
    ViewData["Title"] = "Our Fleet";
}

<style>
    @@keyframes fadeInUp {
        from {
            opacity: 0;
            transform: translateY(30px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    @@keyframes shimmer {
        0% { background-position: -1000px 0; }
        100% { background-position: 1000px 0; }
    }

    .page-header {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        padding: 80px 0;
        color: white;
        margin-bottom: 50px;
    }

    .vehicle-card {
        border-radius: 20px !important;
        overflow: hidden;
        transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
        animation: fadeInUp 0.6s ease-out;
        animation-fill-mode: both;
        border: none !important;
        background: white;
    }

    .vehicle-card:hover {
        transform: translateY(-15px) scale(1.02);
        box-shadow: 0 20px 60px rgba(102, 126, 234, 0.25) !important;
    }

    .vehicle-card img {
        transition: transform 0.5s ease;
        height: 250px;
        object-fit: cover;
        width: 100%;
    }

    .vehicle-card:hover img {
        transform: scale(1.1);
    }

    .vehicle-image-container {
        overflow: hidden;
        position: relative;
        background: linear-gradient(90deg, #f0f0f0 25%, #e0e0e0 50%, #f0f0f0 75%);
        background-size: 1000px 100%;
    }

    .vehicle-image-container::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: linear-gradient(135deg, rgba(102, 126, 234, 0.1) 0%, rgba(118, 75, 162, 0.1) 100%);
        opacity: 0;
        transition: opacity 0.3s ease;
    }

    .vehicle-card:hover .vehicle-image-container::before {
        opacity: 1;
    }

    .price-badge {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        padding: 8px 20px;
        border-radius: 50px;
        font-weight: 700;
        font-size: 1.1rem;
        box-shadow: 0 4px 15px rgba(102, 126, 234, 0.3);
    }

    .type-badge {
        background: rgba(102, 126, 234, 0.1);
        color: #667eea;
        padding: 6px 16px;
        border-radius: 50px;
        font-weight: 600;
        font-size: 0.85rem;
    }

    .btn-book {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        border: none;
        color: white;
        padding: 12px;
        border-radius: 50px;
        font-weight: 700;
        transition: all 0.3s ease;
        box-shadow: 0 4px 15px rgba(102, 126, 234, 0.3);
    }

    .btn-book:hover {
        transform: translateY(-2px);
        box-shadow: 0 6px 20px rgba(102, 126, 234, 0.4);
        background: linear-gradient(135deg, #764ba2 0%, #667eea 100%);
        color: white;
    }

    .filter-section {
        background: white;
        padding: 30px;
        border-radius: 20px;
        box-shadow: 0 10px 40px rgba(0,0,0,0.08);
        margin-bottom: 40px;
    }
</style>

<!-- Page Header -->
<div class="page-header text-center">
    <div class="container">
        <h1 class="display-3 fw-bold mb-3">Our Premium Fleet</h1>
        <p class="lead fs-4">Choose from 26+ luxury vehicles for your perfect journey</p>
    </div>
</div>

<div class="container mb-5">
    <!-- Filters (Optional - can be enhanced later) -->
    <div class="filter-section">
        <div class="row align-items-center">
            <div class="col-md-8">
                <h5 class="mb-0"><i class="fas fa-filter me-2"></i>Filter by Type</h5>
            </div>
            <div class="col-md-4 text-end">
                <span class="text-muted">@Model.Count() vehicles available</span>
            </div>
        </div>
    </div>

    <!-- Vehicles Grid -->
    <div class="row g-4">
        @{
            int delay = 0;
        }
        @foreach (var item in Model)
        {
            <div class="col-lg-4 col-md-6" style="animation-delay: @(delay * 0.1)s;">
                <div class="vehicle-card shadow-sm h-100">
                    <!-- Image -->
                    <div class="vehicle-image-container">
                        @if (!string.IsNullOrEmpty(item.ImageUrl))
                        {
                            <img src="@item.ImageUrl" alt="@item.Brand @item.Model">
                        }
                        else
                        {
                            <div class="d-flex align-items-center justify-content-center" style="height: 250px; background: #f0f0f0;">
                                <span class="text-muted" style="font-size: 4rem;">ðŸš—</span>
                            </div>
                        }
                    </div>
                    
                    <!-- Card Body -->
                    <div class="card-body p-4">
                        <div class="d-flex justify-content-between align-items-center mb-3">
                            <span class="type-badge">@item.VehicleType.Name</span>
                            <span class="price-badge">$@item.DailyRate<small>/day</small></span>
                        </div>
                        
                        <h4 class="fw-bold mb-2">@item.Brand @item.Model</h4>
                        <p class="text-muted mb-3">
                            <i class="fas fa-calendar me-2"></i>Year: @item.Year
                            <i class="fas fa-car ms-3 me-2"></i>@item.LicensePlate
                        </p>
                        
                        <div class="d-grid">
                            <a asp-controller="Bookings" asp-action="Create" asp-route-vehicleId="@item.Id" class="btn btn-book">
                                <i class="fas fa-calendar-check me-2"></i>Book Now
                            </a>
                        </div>
                    </div>
                </div>
            </div>
            delay++;
        }
    </div>
</div>
