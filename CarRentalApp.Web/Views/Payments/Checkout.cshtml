@{
    var clientId = ViewData["PayPalClientId"] as string ?? string.Empty;
    var amount = (decimal)(ViewData["Amount"] ?? 0m);
}

<h2>Checkout</h2>
<p>Amount: @amount</p>
@if (string.IsNullOrEmpty(clientId))
{
    <div class="alert alert-warning">PayPal client id not configured. Set PayPal:ClientId in appsettings.json.</div>
}
else
{
    <div id="paypal-button-container"></div>
    <script src="https://www.paypal.com/sdk/js?client-id=@clientId&currency=USD"></script>
    <script>
        paypal.Buttons({
            createOrder: function(data, actions) {
                return actions.order.create({
                    purchase_units: [{ amount: { value: '@amount' } }]
                });
            },
            onApprove: function(data, actions) {
                return actions.order.capture().then(function(details) {
                    window.location = '/Payments/Success?orderId=' + data.orderID;
                });
            },
            onCancel: function (data) {
                window.location = '/Payments/Cancel';
            }
        }).render('#paypal-button-container');
    </script>
}
