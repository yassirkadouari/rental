@model IEnumerable<CarRentalApp.Core.Entities.Payment>

@{
    ViewData["Title"] = "Payment History";
}

<div class="container my-5">
    <h2 class="mb-4 fw-bold">Payment History</h2>
    
    @if (!Model.Any())
    {
        <div class="alert alert-light text-center py-5 shadow-sm">
            <h4>No payments found.</h4>
            <p>You haven't made any payments yet.</p>
            <a asp-controller="Vehicles" asp-action="Index" class="btn btn-primary mt-3">Browse Cars</a>
        </div>
    }
    else
    {
        <div class="table-responsive shadow-sm rounded">
            <table class="table table-hover align-middle mb-0 bg-white">
                <thead class="bg-light">
                    <tr>
                        <th class="py-3 ps-4">Booking</th>
                        <th>Vehicle</th>
                        <th>Date</th>
                        <th>Amount</th>
                        <th>Method</th>
                        <th>Transaction ID</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model) {
                        <tr>
                            <td class="ps-4">
                                <div class="fw-bold">#@item.BookingId</div>
                            </td>
                            <td>
                                <div>@item.Booking.Vehicle.Brand @item.Booking.Vehicle.Model</div>
                            </td>
                            <td>
                                <div>@item.Date.ToShortDateString()</div>
                            </td>
                            <td class="fw-bold text-success">
                                $@item.Amount
                            </td>
                            <td>
                                <span class="badge bg-info">@item.PaymentMethod</span>
                            </td>
                            <td>
                                <small class="text-muted">@item.TransactionId</small>
                            </td>
                        </tr>
                    }
                </tbody>
                <tfoot>
                    <tr class="table-light">
                        <td colspan="3" class="text-end fw-bold">Total:</td>
                        <td class="fw-bold text-success">$@Model.Sum(p => p.Amount)</td>
                        <td colspan="2"></td>
                    </tr>
                </tfoot>
            </table>
        </div>
    }
</div>
