<Window x:Class="CarRentalApp.Desktop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CarRentalApp.Desktop"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <DockPanel>
        <!-- Sidebar -->
        <Border DockPanel.Dock="Left" Width="200" Background="#333">
            <StackPanel Margin="10">
                <TextBlock Text="CAR RENTAL" Foreground="White" FontSize="20" FontWeight="Bold" Margin="0,0,0,20" HorizontalAlignment="Center"/>
                
                <Button Content="Dashboard" Height="40" Margin="0,5"/>
                <Button Content="Vehicles" Click="Vehicles_Click" Height="40" Margin="0,5"/>
                <Button Content="Rentals" Click="Rentals_Click" Height="40" Margin="0,5"/>
                <Button Content="Users" Click="Users_Click" Height="40" Margin="0,5"/>
                <Button Content="Maintenance" Click="Maintenance_Click" Height="40" Margin="0,5"/>
                <Button Content="Payments" Click="Payments_Click" Height="40" Margin="0,5"/>
                
                <Button Content="Export Data" Click="Export_Click" Height="40" Margin="0,20" Background="Green" Foreground="White"/>
            </StackPanel>
        </Border>

        <!-- Main Content -->
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            
            <!-- Dashboard Stats -->
            <StackPanel Orientation="Horizontal" Margin="20">
                <Border Width="150" Height="100" Background="LightBlue" Margin="10" CornerRadius="5">
                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                        <TextBlock Text="Total Vehicles" FontWeight="Bold"/>
                        <TextBlock x:Name="TxtTotalVehicles" Text="0" FontSize="24" HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>
                <Border Width="150" Height="100" Background="LightGreen" Margin="10" CornerRadius="5">
                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                        <TextBlock Text="Active Rentals" FontWeight="Bold"/>
                        <TextBlock x:Name="TxtActiveRentals" Text="0" FontSize="24" HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>
                <Border Width="150" Height="100" Background="LightSalmon" Margin="10" CornerRadius="5">
                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                        <TextBlock Text="Pending Maintenance" FontWeight="Bold"/>
                        <TextBlock x:Name="TxtMaintenance" Text="0" FontSize="24" HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>
            </StackPanel>
            
            <!-- Placeholder for Views -->
            <ContentControl x:Name="MainContent" Grid.Row="1" Margin="20"/>
        </Grid>
    </DockPanel>
</Window>
